.tabbar_outbox {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 899;

}

.tabbar_box {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 750rpx;
    height: 108rpx;
    box-shadow: 0rpx 10rpx 20rpx 5rpx #4571a1ac;
    background-color: #ffffffd9;
    backdrop-filter: blur(40rpx);

}
.isIpx{
    width: 730rpx!important;
    height: 98rpx!important;
    box-shadow: 0rpx 10rpx 20rpx 5rpx #4571a1ac;
    margin: 10rpx;
    border-radius:  30rpx 30rpx 80rpx 80rpx;
    padding-bottom: calc(env(safe-area-inset-bottom) - 30rpx);
    padding-top: 15rpx;
}
.isAndroid8{
    width: 730rpx!important;
    height: 98rpx!important;
    box-shadow: 0rpx 10rpx 20rpx 5rpx #4571a1ac;
    margin: 10rpx;
    border-radius:  30rpx 30rpx 75rpx 75rpx;
    padding-bottom: 18rpx;
    padding-top: 15rpx;
}
.tabbar_box.iphoneX-height {
  padding-bottom: 48rpx;
}

.tabbar_box.pb20 {
    margin-bottom: 40rpx;
}

.tabbar_nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    height: 100%;
    position: relative;
    color: #222e3d;
}

.tabbar_icon {
  position:relative;
  width: 56rpx;
  height: 56rpx;
}

.tabbar_icon .cart-num {
    position: absolute;
    right: -16rpx;
    top: -4rpx;
    width: 36rpx;
    height: 36rpx;
    background: #ff758c;
    border-radius: 36rpx;
    color: #fff;
    font-size: 22rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.tabbar_icon .img {
  width: 56rpx;
  height: 56rpx;
}