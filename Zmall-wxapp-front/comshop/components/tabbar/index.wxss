.tabbar_box {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 899;
    width: 100%;
    height: 98rpx;
    box-shadow: 0 0 2px rgba(0,0,0,0.1);
}

.tabbar_box.iphoneX-height {
    padding-bottom: 48rpx;
}

.tabbar_box.pb20 {
    padding-bottom: 40rpx;
}

.tabbar_nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    height: 100%;
    position: relative;
}

.tabbar_icon {
    position: relative;
    width: 56rpx;
    height: 56rpx;
}

.tabbar_icon .cart-num {
    position: absolute;
    right: -16rpx;
    top: -4rpx;
    width: 36rpx;
    height: 36rpx;
    background: #ff758c;
    border-radius: 36rpx;
    color: #fff;
    font-size: 22rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.tabbar_icon .img {
    width: 56rpx;
    height: 56rpx;
}