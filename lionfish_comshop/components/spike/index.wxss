.new-comers {
    position: relative;
    margin: 20rpx;
    padding: 20rpx 0;
    background-color: #fff;
    border-radius: 10rpx;
}

.new-comers-title {
    position: relative;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    padding-left: 20rpx;
    display: flex;
    align-items: center;
}

.new-comers-title::before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    border-left: 8rpx solid #f75451;
}

.new-comers .count-down-content .count-down {
    margin-left: 30rpx;
    font-weight: normal;
    height: 40rpx;
    line-height: 40rpx;
    color: #444;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    flex: 1;
}

.new-comers .count-down-content em {
    font-size: 24rpx;
}

.new-comers .count-down-content .count-down .item-time {
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #fff;
    text-align: center;
    background: #444;
    border-radius: 4rpx;
    padding: 0 2rpx;
    font-size: 20rpx;
}

.new-comers-scroll {
    max-height: 320rpx;
}

.new-comers-wrap {
    position: relative;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.new-comers-item {
    width: 240rpx;
    box-sizing: border-box;
    padding: 20rpx;
    font-size: 28rpx;
}

.new-comers-item .new-img {
    width: 200rpx;
    height: 180rpx;
    margin-bottom: 20rpx;
}

.new-comers-item .title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.new-comers-item .new-bot {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
}

.new-comers-item .add-cart {
    width: 44rpx;
    height: 44rpx;
    padding: 0;
    margin: 0;
}

.new-comers-item .add-cart .img {
    width: 44rpx;
    height: 44rpx;
    display: block;
}

.new-comers-item .price {
    color: #ff5041;
}

.new-comers-item {
    position: relative;
}

.new-comers-item .act-end {
    position: absolute;
    height: 60rpx;
    border-radius: 10rpx;
    background: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    left: 50%;
    top: 80rpx;
    padding: 0 12rpx;
    transform: translateX(-50%);
}